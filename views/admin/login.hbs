<head>
	<meta charset="utf-8">
	<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
	<meta name="viewport" content="width=device-width">
	<meta name="description" content="">
	<meta name="keywords" content="">
	<base href="/">
	<title>管理员登录::::,</title>
	<link rel="stylesheet" href="vendor/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="stylesheets/dist/mehn-obj.css">

	{{{_sections.head}}}
</head>
<body>
<main class="container">
	<div class="modal-content" style="box-shadow: 0 0 4px #2f63cc;">
	<div class="modal-header btn-primary">
		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<h4 class="modal-title text-center" id="myModalLabel">管理员登录</h4>
	</div>
	<div class="modal-body">
		<form class="form-horizontal"
		      name="adminForm"
		      id="adminForm"
		      action="/admin/login"
		      onsubmit="return formValidator();"
		      method="POST">
			<div class="form-group">
				<label class="col-sm-2 control-label">登录名</label>
				<div class="col-sm-10">
					<input class="form-control"
					       placeholder="登录名"
					       type="text"
					       name="loginname"
					       id="loginname"
					       value="{{loginname}}">
					<div id="loginnameErro" class="alert alert-danger" role="alert"></div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">登录密码</label>
				<div class="col-sm-10">
					<input class="form-control"
					       placeholder="登录密码"
					       type="password"
					       name="loginpwd"
					       id="loginpwd"
					       value="{{loginpwd}}">
					<div id="loginpwdErro" class="alert alert-danger" role="alert"></div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
				<button id="save" type="submit" class="btn btn-primary" >登录</button>
			</div>
		</form>
	</div>
	</div>
	<div style="font-size: 24px;color: #f00;">{{errMsg}}</div>
</main>



<script src="vendor/jquery/dist/jquery.min.js"></script>
<script src="vendor/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="vendor/validator/validator.min.js"></script>
<script>
	function formValidator() {
		var ret = true;
		if(!validator.isLength($("#loginname").val(), {min:4, max: 20})) {
			ret = false;
			alert("登录名不正确");
			$("#loginname").focus();
			return false;
		}
		if(!validator.isLength($("#loginpwd").val(), {min:6, max: 20})) {
			ret = false;
			alert("密码在6-20个数字或字母");
			$("#loginpwd").focus();
			return false;
		}
		return ret;
	}

</script>
</body>
</html>
